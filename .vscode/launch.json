  "version": "0.2.0",
  "configurations": [
    {
      "type": "bun",
      "internalConsoleOptions": "neverOpen",
      "request": "launch",
      "name": "Debug",
      "program": "${workspaceFolder}/index.ts",
      "cwd": "${workspaceFolder}",
      "args": ["--watch"],
      "stopOnEntry": false,
      "watchMode": true
    },
    {
      "type": "bun",
      "internalConsoleOptions": "neverOpen",
      "request": "launch",
      "name": "Run",
      "program": "${workspaceFolder}/index.ts",
      "cwd": "${workspaceFolder}",
      "noDebug": true,
      "watchMode": false
    }
  ]
}
